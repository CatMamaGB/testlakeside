{% style %}
.footer {
  background-color: #1B4754;
  color: white;
  padding: 4rem 2rem 2rem;
}

.footer__content {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 2rem;
}

.footer__column h2 {
  color: white;
  font-size: 1.2rem;
  margin-bottom: 1rem;
}

.footer__column ul {
  list-style: none;
  padding: 0;
  margin: 0 0 2rem;
}

.footer__column ul li {
  margin-bottom: 0.5rem;
}

.footer__column a {
  color: white;
  text-decoration: none;
  font-size: 0.9rem;
}

.footer__column a:hover {
  text-decoration: underline;
}

.footer__social {
  display: flex;
  gap: 1rem;
  margin-top: 1rem;
}

.footer__social a {
  color: white;
}

.footer__newsletter {
  max-width: 1200px;
  margin: 3rem auto;
}

.footer__form {
  display: flex;
  gap: 1rem;
  margin-top: 1rem;
}

.footer__form input[type="email"] {
  flex: 1;
  padding: 0.75rem;
  border: none;
}

.footer__form button {
  background: #4CAF50;
  color: white;
  border: none;
  padding: 0.75rem 2rem;
  cursor: pointer;
}

.footer__bottom {
  max-width: 1200px;
  margin: 2rem auto 0;
  padding-top: 2rem;
  border-top: 1px solid rgba(255,255,255,0.1);
  text-align: center;
  font-size: 0.9rem;
}

.footer__bottom a {
  color: white;
  text-decoration: none;
}

@media screen and (max-width: 1024px) {
  .footer__content {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media screen and (max-width: 768px) {
  .footer__content {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .footer__form {
    flex-direction: column;
  }
}

@media screen and (max-width: 480px) {
  .footer__content {
    grid-template-columns: 1fr;
  }
}
{% endstyle %}

